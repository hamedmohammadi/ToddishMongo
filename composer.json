{
    "name": "nova/toddish-mongo",
    "description": "A simple authentication bundle for Laravel 4. It features roles, permissions, password salting and is fully extendable. (on MONGO database)",
    "authors": [
        {
            "name": "hamed Mohammadi",
            "email": "hamed.nova@gmail.com"
        }
    ],
    "keywords": ["laravel", "auth", "permissions", "roles", "verify","mongo"],
    "require": {
        "php": ">=5.3.0",
        "illuminate/support": "4.0.x"
    },
    "autoload": {
        "classmap": [
            "src/migrations"
        ],
        "psr-0": {
            "Nova\\ToddishMongo": "src/"
        }
    },
    "minimum-stability": "dev"
}